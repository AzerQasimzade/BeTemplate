@using ImtahanTest1.Areas.ViewModels;

@model CreateEmployeeVM

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Create Employee</h4>
                        <p class="card-description">
                            Basic form elements
                        </p>
                        <form class="forms-sample" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" ></div>
                            <div class="form-group">
                                <label asp-for="Name" for="exampleInputName1">Name</label>
                                <input asp-for="Name" class="form-control" id="exampleInputName1" placeholder="Name">
                                <span asp-validation-for="Name"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Profession" for="exampleInputEmail3">Profession</label>
                                <input asp-for="Profession" class="form-control" id="exampleInputEmail3" placeholder="Profession">
                                <span asp-validation-for="Profession" ></span>
                            </div>
                           <div class="form-group">
                                <label asp-for="Photo" for="exampleInputEmail3">Photo</label>
                                <input asp-for="Photo" class="form-control" id="exampleInputEmail3" placeholder="Photo">
                                <span asp-validation-for="Photo" ></span>
                            </div>
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>